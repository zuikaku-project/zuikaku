{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["ES2021", "ESNext.Array"],
        "strict": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": "./src",
        "typeRoots": ["node_modules/@types", "src/types/index.d.ts"],
        "paths": {
            "@zuikaku/*": ["*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules/**"]
}
