{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": ["ES2021"],
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": "./src",
        "typeRoots": ["node_modules/@types", "src/types"],
        "paths": {
            "#zuikaku-structures/*": ["structures/*"],
            "#zuikaku-utils/*": ["utils/*"],
            "#zuikaku-types": ["types"],
            "#zuikaku-enums": ["enums"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules/**"]
}
